{
    "name": "LectureSurfers",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["storage", "tabs", "activeTab", "scripting"],
    "update_url":"https://clients2.google.com/service/update2/crx",
    "description": "LectureSurfers is a tool for students to listen to lectures with a background of their choice that helps them focus.",
    "action": {
        "default_popup": "popup.html",
        "default_title": "LectureSurfer",
        "default_icon": {
            "16": "/images/icon16.png",
            "32": "/images/icon32.png",
            "48": "/images/icon48.png",
            "128": "/images/icon128.png"
        }
    },
    "host_permissions": ["<all_urls>"],
    "icons": { 
        "16": "/images/icon16.png", 
        "32": "/images/icon32.png",
        "48": "/images/icon48.png", 
        "128": "/images/icon128.png" 
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["images/backgroundImg.jpg", "resources/minecraft.mp4"],
            "matches": ["<all_urls>"]
        }
    ]
}
